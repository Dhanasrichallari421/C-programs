#include <stdio.h>
int main()
{
    int a[100];
    int n;
    int i;
    int*ptr=&a[0];
    printf("\n enter the size of array");
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        printf("enter the value");
        scanf("%d",(ptr+i));
    }
    printf("\n the array elements are \n");
    for(i=0;i<n;i++)
    {
        printf("%d",*(ptr+i));
    }
    return 0;
}
