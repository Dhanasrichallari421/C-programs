#include<stdio.h>
void accept(int a[100],int n);
void display(int b[100],int n);
int main()
{
    int a[100],b[100];
    int n,i;
    printf("\n Enter the size of array");
    scanf("%d",&n);
    printf("\n enter the value into array a \n ");
    accept(a,n);
    printf("\n enter the value into array b \n");
    accept(b,n);
    printf("\n the value in array a \n");
    display(a,n);
    printf("\n the value in array b \n");
    display(b,n);
    return 0;
}
void accept(int t[100],int n)
{
    int i;
    for(i=0;i<n;i++)
    {
        scanf("%d",&t[i]);
    }
}
void display(int t[100],int n)
{
    int i;
    for(i=0;i<n;i++)
    {
        printf("%d",t[i]);
    }
}
